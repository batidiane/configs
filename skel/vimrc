" Encoding

set encoding=utf-8

" Tabulations size
set  tabstop =2
set  shiftwidth =2
set  softtabstop =2

set  expandtab

" Autoindent
set ai
set smartindent
set cindent 
set autoindent

" Line numbers
set  nu

" Mouse
set  mouse =a

" Parenthesis
set  showmatch

set background=light

" Rules
set ruler

set t_ti= t_te=

" colorscheme elflord

filetype plugin on
syntax on

syntax cluster sassCssAttributes add=@cssColors
